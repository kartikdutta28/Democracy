doctype html
html
  head
    title Democracy
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='/') Democracy
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/posts/add')
              | Add Posts 
              span.sr-only (current)
          li.nav-item.active
            a.nav-link(href='/polls') Polls
          li.nav-item.active
            a.nav-link(href='/profiles') Your Leaders
          li.nav-item.active
            a.nav-link(href='#') Login
          li.nav-item.active
            a.nav-link(href='#') Register
          
        form.form-inline.mt-2.mt-md-0
          input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    br 
    br
    .row
      each poll, i in polls
        .col-md-6
          form(onsubmit='vote(event);', id=poll._id)
            .panel.panel-primary
              .panel-heading
                h3.panel-title
                  span.glyphicon.glyphicon-arrow-right= poll.topic
              .panel-body
                ul.list-group
                  each choice ,i in poll.choices
                    li.list-group-item
                      .radio
                        label
                          input(type='radio', name='optionsRadios', value=choice.value) 
                          | #{choice.value}
                          .alignright(id='vote-count-'+poll.id+'-'+choice.value)= choice.votes 
                .panel-footer
                  input.btn.btn-primary.btn-sm(type='submit', id='vote-btn-'+poll.id, value='Vote')

